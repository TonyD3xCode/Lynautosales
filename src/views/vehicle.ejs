<% if (!v){ %>
  <p class="alert">Vehículo no encontrado.</p>
<% } else { %>
  <h1><%= v.year %> <%= v.make %> <%= v.model %></h1>
  <p class="badge"><%= v.status.toUpperCase() %></p>
  <div class="gallery">
    <% photos.forEach(p=>{ %>
      <img src="/uploads/images/<%= p.filename %>" alt="">
    <% }) %>
  </div>
  <% if (v.video){ %>
    <div class="video" style="margin:10px 0">
      <video controls playsinline preload="metadata" width="100%">
        <source src="/uploads/videos/<%= v.video %>" type="video/mp4">
        <source src="/uploads/videos/<%= v.video %>" type="video/webm">
      </video>
    </div>
  <% } %>
  <p>Precio $<%= Number(v.price).toLocaleString() %> · Millaje <%= Number(v.mileage).toLocaleString() %></p>
  <p>VIN <%= v.vin %></p>
  <p>Transmisión <%= v.transmission %> · Combustible <%= v.fuel_type %></p>
  <p>Título <%= v.title_status %> · Ubicación <%= v.location %></p>
  <h3>Descripción</h3>
  <p><%= (v.description||'').replace(/\n/g,'<br>') %></p>
  <h3><%= __('vehicle.contact') %></h3>
  <form method="post" action="/vehicle/<%= v.id %>">
    <label>Nombre</label><input name="name" required>
    <label>Email</label><input type="email" name="email" required>
    <label>Teléfono</label><input name="phone">
    <label>Mensaje</label><textarea name="message" rows="4"><%= __('vehicle.interested') %></textarea>
    <button class="btn"><%= __('vehicle.send') %></button>
  </form>
<% } %>
