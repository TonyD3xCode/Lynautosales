<%- include('partials/shell', {
  pageTitle: 'Ajustes del sitio',
  currentPath: '/admin/settings',
  body: `
  <form method="post" class="form grid-2">
    <fieldset class="card">
      <div class="card-body">
        <h3>Identidad</h3>
        <label>Nombre del sitio<input name="site.name" value="${(s['site.name']||'')}" /></label>
        <label>Color primario<input name="brand.primary" value="${(s['brand.primary']||'#F5C542')}" /></label>
        <label>Color oscuro<input name="brand.dark" value="${(s['brand.dark']||'#0E0E0E')}" /></label>
      </div>
    </fieldset>

    <fieldset class="card">
      <div class="card-body">
        <h3>Contacto</h3>
        <label>WhatsApp<input name="contact.whatsapp" value="${(s['contact.whatsapp']||'')}" /></label>
        <label>Email<input name="contact.email" value="${(s['contact.email']||'')}" /></label>
        <label>Ciudad<input name="location.city" value="${(s['location.city']||'')}" /></label>
        <label>Horario (semana)<input name="hours.week" value="${(s['hours.week']||'')}" /></label>
        <label>Horario (sábado)<input name="hours.sat" value="${(s['hours.sat']||'')}" /></label>
      </div>
    </fieldset>

    <fieldset class="card" style="grid-column:1/-1">
      <div class="card-body">
        <h3>Hero</h3>
        <label>Título<input name="hero.headline" value="${(s['hero.headline']||'')}" /></label>
        <label>Subtítulo<input name="hero.sub" value="${(s['hero.sub']||'')}" /></label>
      </div>
    </fieldset>

    <div style="grid-column:1/-1">
      <button class="btn">Guardar cambios</button>
    </div>
  </form>
  `
}) %>
