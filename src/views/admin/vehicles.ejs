<h1><%= __('admin.vehicles') %></h1>
<p>
  <a class="btn" href="/admin/vehicles/new"><%= __('admin.newVehicle') %></a>
  <a class="btn secondary" href="/admin/import">Importar CSV</a>
</p>
<table class="table">
  <thead><tr><th>ID</th><th>Unidad</th><th>Precio</th><th>Estado</th><th><%= __('common.actions') %></th></tr></thead>
  <tbody>
    <% rows.forEach(r=>{ %>
      <tr>
        <td><%= r.id %></td>
        <td><%= r.year %> <%= r.make %> <%= r.model %></td>
        <td>$<%= Number(r.price).toLocaleString() %></td>
        <td><%= r.status %></td>
        <td><a href="/admin/vehicles/<%= r.id %>/edit">Editar</a> | <a href="/vehicle/<%= r.id %>" target="_blank">Ver</a></td>
      </tr>
    <% }) %>
  </tbody>
</table>
