<section class="auth-wrap">
  <div class="auth-card">
    <div class="auth-brand">
      <img src="/assets/logo.png" alt="LYN AutoSales">
      <h1>Ingresar</h1>
      <% if (error) { %><p class="auth-error"><%= error %></p><% } %>
    </div>

    <form method="post" action="/admin/login" class="auth-form">
      <label class="field">
        <span>Email</span>
        <input type="email" name="email" autocomplete="email" required>
      </label>

      <label class="field">
        <span>Contraseña</span>
        <div class="password-row">
          <input id="pwd" type="password" name="password" autocomplete="current-password" required>
          <button class="eye" type="button" aria-label="Mostrar/Ocultar" onclick="pwd.type = pwd.type==='password' ? 'text' : 'password'">👁️</button>
        </div>
      </label>

      <div class="auth-actions">
        <label class="check"><input type="checkbox" name="remember"> Recordarme</label>
        <a class="muted" href="#">¿Olvidaste tu contraseña?</a>
      </div>

      <button class="btn auth-btn" type="submit">Entrar</button>
    </form>

    <p class="auth-footer">
      Acceso exclusivo para personal autorizado de LYN AutoSales.
    </p>
  </div>
</section>
