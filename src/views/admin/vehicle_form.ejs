<% const editing = !!v; %>
<h1><%= editing ? __('admin.editVehicle') : __('admin.newVehicle') %></h1>
<form method="post" enctype="multipart/form-data">
  <label>Año</label><input type="number" name="year" value="<%= v?.year || '' %>" required>
  <label>Marca</label><input name="make" value="<%= v?.make || '' %>" required>
  <label>Modelo</label><input name="model" value="<%= v?.model || '' %>" required>
  <label>Precio</label><input type="number" step="0.01" name="price" value="<%= v?.price || '' %>" required>
  <label>Millaje</label><input type="number" name="mileage" value="<%= v?.mileage || '' %>">
  <label>VIN</label><input name="vin" value="<%= v?.vin || '' %>">
  <label>Título</label>
  <select name="title_status">
    <option value="clean" <%= v?.title_status==='clean'?'selected':'' %>>Clean</option>
    <option value="rebuilt" <%= v?.title_status==='rebuilt'?'selected':'' %>>Rebuilt</option>
    <option value="salvage" <%= v?.title_status==='salvage'?'selected':'' %>>Salvage</option>
  </select>
  <label>Transmisión</label><input name="transmission" value="<%= v?.transmission || '' %>">
  <label>Combustible</label><input name="fuel_type" value="<%= v?.fuel_type || '' %>">
  <label>Ubicación</label><input name="location" value="<%= v?.location || 'Panama City FL' %>">
  <label>Estado</label>
  <select name="status">
    <option value="available" <%= v?.status==='available'?'selected':'' %>>Disponible</option>
    <option value="pending" <%= v?.status==='pending'?'selected':'' %>>Pendiente</option>
    <option value="sold" <%= v?.status==='sold'?'selected':'' %>>Vendido</option>
  </select>
  <label>Descripción</label><textarea name="description" rows="5"><%= v?.description || '' %></textarea>
  <label>Foto principal</label><input type="file" name="main_photo" accept="image/*" capture="environment">
  <label>Fotos de galería (múltiples)</label><input type="file" name="gallery" accept="image/*" multiple>
  <label>Video (MP4/WebM)</label><input type="file" name="video" accept="video/mp4,video/webm">
  <button class="btn"><%= editing? __('common.save'): __('common.create') %></button>
</form>

<% if (editing && photos?.length){ %>
<h3><%= __('admin.gallery') %></h3>
<div class="gallery">
  <% photos.forEach(p=>{ %>
    <img src="/uploads/images/<%= p.filename %>" alt="">
  <% }) %>
</div>
<% } %>
