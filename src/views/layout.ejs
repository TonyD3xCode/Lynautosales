<!DOCTYPE html>
<html lang="<%= locale || 'es' %>">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title><%= title ? (title + ' · LYN AutoSales') : 'LYN AutoSales' %></title>
  <% if (typeof meta_description === 'string' && meta_description) { %>
    <meta name="description" content="<%= meta_description %>">
  <% } %>
  <link rel="stylesheet" href="/assets/styles.css">
</head>
<body class="<%= (user && user.role) ? ('role-' + user.role) : 'role-guest' %>">

  <header class="site-header">
    <div class="container flex between center-v">
      <a class="logo" href="/">LYN AutoSales</a>
      <nav class="nav">
        <a href="/inventory"><%= __('common.inventory') %></a>
        <a href="/about"><%= __('common.about') %></a>
        <a href="/contact"><%= __('common.contact') %></a>

        <% if (user) { %>
          <a href="/admin"><%= __('common.admin') %></a>
          <a href="/auth/logout"><%= __('common.logout') %></a>
        <% } else { %>
          <a href="/auth/login"><%= __('common.login') %></a>
        <% } %>

        <!-- Selector simple de idioma -->
        <a class="lang" href="?lang=es">ES</a>
        <a class="lang" href="?lang=en">EN</a>
      </nav>
    </div>
  </header>

  <main id="content" class="container">
    <%- body %>
  </main>

  <footer class="site-footer">
    <div class="container">
      <small>© <%= new Date().getFullYear() %> LYN AutoSales</small>
    </div>
  </footer>

</body>
</html>
