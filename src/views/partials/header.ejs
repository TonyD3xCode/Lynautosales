<header class="main-header">
  <div class="container header-flex">
    <div class="logo">
      <a href="/"><span class="brand">LYN AutoSales</span></a>
    </div>

    <nav class="nav-menu">
      <ul>
        <li><a href="/inventory"><%= __('menu.inventory') %></a></li>
        <li><a href="/about"><%= __('menu.about') %></a></li>
        <li><a href="/contact"><%= __('menu.contact') %></a></li>
        <% if (user) { %>
          <li><a href="/admin"><%= __('menu.admin') %></a></li>
          <li><a href="/auth/logout"><%= __('menu.logout') %></a></li>
        <% } else { %>
          <li><a href="/auth/login"><%= __('menu.login') %></a></li>
        <% } %>
        <li class="lang-switch">
          <a href="?lang=es" class="<%= req.getLocale() === 'es' ? 'active' : '' %>">ES</a> |
          <a href="?lang=en" class="<%= req.getLocale() === 'en' ? 'active' : '' %>">EN</a>
        </li>
      </ul>
    </nav>
  </div>
</header>
