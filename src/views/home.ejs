<!-- src/views/home.ejs -->
<section class="hero">
  <h1><%= __('home.title') %></h1>
  <p><%= __('home.subtitle') %></p>

  <div class="actions">
    <a href="/inventory" class="btn btn-primary"><%= __('home.viewInventory') %></a>
    <a href="https://wa.me/1XXXXXXXXXX" class="btn btn-outline"><%= __('home.whatsapp') %></a>
  </div>

  <form class="search-form" action="/search" method="GET">
    <input type="text" name="q" placeholder="<%= __('home.searchPlaceholder') %>">
    <button type="submit"><%= __('home.search') %></button>
  </form>
</section>

<section class="features">
  <div class="feature">
    <h2><%= __('home.time') %></h2>
    <p><%= __('home.timeText') %></p>
  </div>

  <div class="feature">
    <h2><%= __('home.checked') %></h2>
    <p><%= __('home.checkedText') %></p>
  </div>

  <div class="feature">
    <h2><%= __('home.financing') %></h2>
    <p><%= __('home.financingText') %></p>
  </div>
</section>

<section class="inventory">
  <h2><%= __('home.newInventory') %></h2>
  <a href="/inventory" class="btn btn-outline"><%= __('home.viewAll') %></a>
  <p><%= __('home.noVehicles') %></p>
</section>

<section class="sell">
  <h2><%= __('home.sellTitle') %></h2>
  <p><%= __('home.sellText') %></p>
  <a href="/contact" class="btn btn-primary"><%= __('home.contactUs') %></a>
</section>
