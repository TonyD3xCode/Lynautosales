<% /* ---------- src/views/home.ejs (REEMPLAZO COMPLETO) ---------- */ %>
<%- include('partials/header', { title }) %>

<section class="hero">
  <div class="wrap hero-inner">
    <div class="hero-copy">
      <h1><%= home.title %></h1>
      <p><%= home.subtitle %></p>

      <div class="actions">
        <a class="btn" href="/inventory"><%= home.view_inventory %></a>
        <a class="btn btn-ghost" href="https://wa.me/1XXXXXXXXXX" rel="noopener" target="_blank">
          <%= home.whatsapp_cta %>
        </a>
      </div>

      <form class="search" action="/inventory" method="get" novalidate>
        <input
          type="text"
          name="q"
          class="input"
          placeholder="<%= __('common.search_placeholder') %>"
          aria-label="<%= __('common.search_placeholder') %>"
        />
        <button class="btn" type="submit"><%= __('common.search') %></button>
      </form>
    </div>
  </div>
</section>

<section class="features">
  <div class="wrap">
    <div class="grid grid-3">
      <div class="card">
        <h3><%= home.advantages.time %></h3>
        <p><%= __('home.advantages_desc.time') %></p>
      </div>
      <div class="card">
        <h3><%= home.advantages.reviewed %></h3>
        <p><%= __('home.advantages_desc.reviewed') %></p>
      </div>
      <div class="card">
        <h3><%= home.advantages.finance %></h3>
        <p><%= __('home.advantages_desc.finance') %></p>
      </div>
    </div>
  </div>
</section>

<section class="new">
  <div class="wrap">
    <div class="section-head">
      <h2><%= home.new_inventory %></h2>
      <a class="btn btn-ghost" href="/inventory"><%= __('common.view_all') %></a>
    </div>

    <% if ((featured || []).length === 0) { %>
      <p class="muted"><%= home.empty_inventory_hint %></p>
    <% } else { %>
      <div class="grid grid-4 cards">
        <% featured.forEach(v => { %>
          <article class="card vehicle">
            <div class="media">
              <img
                src="<%= v.main_photo || '/assets/img/placeholder.jpg' %>"
                alt="<%= [v.year, v.make, v.model].filter(Boolean).join(' ') %>"
                loading="lazy"
              />
            </div>
            <div class="card-body">
              <h3 class="title">
                <%= [v.year, v.make, v.model].filter(Boolean).join(' ') %>
              </h3>
              <p class="meta">
                <% if (v.mileage_fmt || v.mileage) { %>
                  <span><%= v.mileage_fmt || v.mileage %> mi</span>
                <% } %>
                <% if (v.transmission) { %>
                  Â· <span><%= v.transmission %></span>
                <% } %>
              </p>
              <% if (v.price_fmt || v.price) { %>
                <p class="price"><%= v.price_fmt || ('$' + v.price) %></p>
              <% } %>
              <a class="btn btn-sm" href="/inventory/<%= v.id %>"><%= __('common.view') %></a>
            </div>
          </article>
        <% }) %>
      </div>
    <% } %>
  </div>
</section>

<section class="cta-sell">
  <div class="wrap">
    <h2><%= home.sell_offer_title %></h2>
    <p><%= home.sell_offer_subtitle %></p>
    <a class="btn" href="/contact"><%= home.sell_contact %></a>
  </div>
</section>

<%- include('partials/footer') %>
